<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <title>Interview Prep Tracker</title>
</head>
<style>
  body{
      margin: 0px;
      padding: 0px;
      background: url(/bg12.jpg);
  }
</style>
<body>
    <header class="text-gray-400 bg-gray-900 body-font">
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
          <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            <span class="ml-3 text-xl">INTERVIEW TRACKER</span>
          </a>
          <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
            <% if(user){ %>
              <a class="mr-5 hover:text-white">Welcome, <%= user.email %></a>
              <% if(isAdmin){ %>
                  <a href="/admin" class="mr-5 hover:text-white">ADMIN PAGE</a>
              <% } %>
              <a href="/" class="mr-5 hover:text-white">HOME</a>
              <a href="/logout" class="mr-5 hover:text-white">LOG OUT</a>
                    
              <% }else{ %>
              <a href="/" class="mr-5 hover:text-white">HOME</a>
              <a href="/login" class="mr-5 hover:text-white">LOG IN</a>
              <a href="/signup" class="mr-5 hover:text-white">SIGN UP</a>
            <% } %>
          </nav>
        </div>
      </header>
    <section class="text-gray-400 body-font ">
        <div class="container px-5 py-10 mx-auto">
          <div class="flex flex-wrap -m-4">
            <% list.forEach((question) => { %>
              <% if(question.approv){ %>
                <a href="<%= question.link %>">
                <div class="xl:w-1/4 md:w-1/2 p-4">
                  <div class="tooltip bg-gray-800 hover:bg-indigo-600 bg-opacity-40 p-6 rounded-lg">
                    <img class="h-40 rounded w-full object-cover object-center mb-6" src="\<%= topicname.name %>.jpg" alt="content">
                    <h2 class="text-lg text-white font-medium title-font mb-4"><a href="<%= question.link %>"><h2><%= question.name %></a></h2>
                    <span class="tooltiptext"><%= question.link.substr(8) %></span>
                  </div>
                </div>
              </a>
              <% } %>
            <% }) %>

          </div>
        </div>
      </section>

      <%- include('../partials/footer'); -%>
      